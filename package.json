{
  "name": "neuroscroll-youtube-analyzer",
  "version": "1.0.0",
  "description": "Privacy-first Chrome extension for YouTube Shorts behavior analysis",
  "scripts": {
    "build": "npm run build:extension && npm run build:popup",
    "build:extension": "webpack --mode=production",
    "build:popup": "node scripts/build-popup.js",
    "dev": "webpack --mode=development --watch",
    "dev:popup": "next dev",
    "test": "jest",
    "lint": "eslint src/**/*.ts popup-src/**/*.{ts,tsx}",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.2",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@tensorflow/tfjs": "^4.17.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "framer-motion": "^12.23.12",
    "next": "^15.5.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12"
  }
}
