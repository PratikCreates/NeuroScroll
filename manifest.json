{
  "manifest_version": 3,
  "name": "NeuroScroll - YouTube Shorts Analyzer",
  "version": "1.0.0",
  "description": "Privacy-first browser extension that analyzes YouTube Shorts viewing behavior through neuroscience-based metrics",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": [
        "dist/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup-dist/index.html",
    "default_title": "NeuroScroll Dashboard"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dist/*.js",
        "docs.html"
      ],
      "matches": [
        "https://www.youtube.com/*",
        "<all_urls>"
      ]
    }
  ]
}